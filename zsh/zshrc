# fasd
eval "$(fasd --init auto)"

### Alias ###
REM_HOST=host
REM_USER=user
function rpush {
	scp $1 $REM_USER@$REM_HOST.as.arizona.edu:/home/$REM_USER/Downloads
}
function rpull {
	scp $REM_USER@$REM_HOST.as.arizona.edu:/home/$REM_USER/$1 .
}
function rwget {
	ssh -t $REM_USER@$REM_HOST.as.arizona.edu "wget -P /home/'$REM_USER'/Downloads/ '$1'"
}
# neovim
alias nv='nvim'
# radio
alias groove="mplayer http://ice.somafm.com/groovesalad"
# fasd
alias v='f -e vim'
alias m='f -e mplayer'
alias o='a -e xdg-open'
# ls
alias ls='ls -F --color'
alias ll='ls -lF --color'
alias la='ls -aF --color'
function dls {
	echo `ls -l | grep "^d" | awk '{print $9}' | tr -d "/"`
}
# python
alias ipy='ipython'
alias ipy3='ipython3 --profile=three'
alias ipnb='ipython notebook'
# julia
alias jl='julia'
alias ijl='ipython console --profile julia'
alias ijnb='ipython notebook --profile julia'
# config
alias zshrc="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias vimrc="vim ~/.vimrc"
# misc
alias cad='cal;date'
alias dr='cd "$(< /tmp/cwd)"'
alias ds='pwd > /tmp/cwd'
alias grep='grep -n --color'
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias tmux='tmux -2'
alias vw='vim -c VimwikiIndex'
alias slurm='slurm -i eth0'
alias trash='gvfs-trash'
alias hangups='hangups --col-scheme solarized-dark'
