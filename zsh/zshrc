export GOROOT=$HOME/code/go
export GOPATH=$HOME/code/gocode
export MPLCONFIGDIR=~/.config/matplotlib
export CFITSIO=/usr/include:/usr/lib/x86_64-linux-gnu/:/usr/lib:/usr/local/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib:/usr/include:~/code/qhull/lib:~/code/ARTIST/lib
export IDL_PATH=/usr/local/exelis/idl82/bin:/usr/local/exelis/idl82/lib:~/research/scripts/idl:~/research/scripts/astron:~/research/scripts/starfinder:~/research/scripts/IDLAstro/pro:~/research/scripts/idl-coyote/:~/research/scripts/cmtotal
